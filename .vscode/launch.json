{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: debug server-side",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm dev"
    },
    {
      "name": "Next.js: debug client-side",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000"
    },
    {
      "name": "Next.js: debug full stack",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm dev",
      "serverReadyAction": {
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "Seed Script",
      "type": "node-terminal",
      "request": "launch",
      "command": "set -a && source .env && set +a && npx tsx ${input:seedScript}",
      "cwd": "${workspaceFolder}"
    }
  ],
  "inputs": [
    {
      "id": "seedScript",
      "type": "promptString",
      "description": "Path to seed script (e.g., src/scripts/seed-home.ts)",
      "default": "src/scripts/seed-all.ts"
    }
  ]
}
